{
	"$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
	"files": {
		"includes": [
			"src/**/*.ts",
			"src/**/*.js",
			"src/**/*.css",
			"!**/dist"
		]
	},
	"formatter": {
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineWidth": 120
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noNonNullAssertion": "off",
				"useTemplate": "off"
			},
			"suspicious": {
				"useIterableCallbackReturn": "off",
				"noArrayIndexKey": "off",
				"noExplicitAny": "off",
				"noAssignInExpressions": "off",
				"noGlobalIsNan": "off",
				"noTsIgnore": "off"
			},
			"correctness": {
				"useExhaustiveDependencies": "off"
			},
			"security": {
				"noGlobalEval": "off"
			},
			"complexity": {
				"useArrowFunction": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "always"
		}
	},
	"css": {
		"formatter": {
			"enabled": true,
			"indentStyle": "tab",
			"indentWidth": 4,
			"lineWidth": 120
		}
	}
}